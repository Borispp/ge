.the-about
  background #F0F5FB
  box-shadow inset 0 -8px 30px 0 rgba(7,31,115,0.10)
  padding 72px 0

  @media (max-width 767px)
    padding 50px 0

  &__wrapper
    display flex
    justify-content space-between
    align-items center
    box-sizing border-box
    padding-left 100px

    @media (max-width 1150px)
      padding-left 0

    @media (max-width 767px)
      flex-direction column-reverse

  &__left
    max-width 380px
    margin-right 40px

    @media (max-width 767px)
      margin-right 0
      text-align center
      max-width 500px

  &__description
    color #1E2B6F
    font-size 15px
    line-height 22px
    padding 10px 0 30px

    @media (max-width 767px)
      font-size 12px
      line-height 19px
      color #A6B2D9

  &__right
    img
      max-width 100%

    @media (max-width 767px)
      width 100%
      max-width 280px
      margin-bottom 30px

    @media (max-width 400px)
      max-width 240px
