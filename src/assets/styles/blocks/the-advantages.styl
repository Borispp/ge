.the-advantages
  background #F0F5FB
  box-shadow inset 0 -8px 30px 0 rgba(7,31,115,0.10)
  box-sizing border-box
  padding 130px 0 32px
  width 100%
  overflow-x hidden

  @media (max-width 767px)
    padding 50px 0

  h2.headline
    margin-bottom 44px

    @media (max-width 767px)
      text-align center

    @media (max-width 767px)
      margin-bottom 20px

  &__wrapper
    display flex
    flex-wrap wrap
    justify-content space-between

    &.-mobile
      display none

    @media (max-width 767px)
      display none

      &.-mobile
        display block

  &__item
    display flex
    align-items flex-start
    flex-basis 33.33%
    margin-bottom 32px

    @media (max-width 767px)
      flex-direction: column;
      justify-content: center;
      align-items: center;
      text-align center
      margin 0 15px

  &__item-content
    width 190px

    @media (max-width 767px)
      margin-top 10px
      width auto

  &__item-icon
    margin-right 23px
    min-width 50px

    @media (max-width 767px)
      margin-right 0
      display flex
      align-items center
      height 75px

  &__item-headline
    font-weight 700
    color #1E2B6F
    font-size 16px
    line-height 20px
    margin-bottom 4px

    @media (max-width 767px)
      font-size 14px

  &__item-description
    opacity: 0.5;
    font-size: 14px;
    color: #1E2B6F;
    line-height: 20px;

    @media (max-width 767px)
      font-size 12px
      line-height 16px
      color: #1E2B6F;

  @media (max-width 767px)
    box-shadow none
