.the-date
  &__input-wrapper
    position relative
    background #fff
    height 48px
    border-radius 5px
    box-shadow 0 1px 3px 0 rgba(73,79,106,0.14)
    border 1px solid transparent

    &.-open
      border-color $blue

      .the-date__input
        +placeholder()
          color #536AFF

    &.icon-left
      .the-date__input-icon
        right auto
        left 20px

      .the-date__input
        padding-left 50px

  &__input
    width 100%
    height 100%
    line-height 100%
    border-radius 5px
    background transparent
    border none
    font-size 16px
    color #1E2B6F
    font-weight 500
    padding 0 12px
    position relative
    z-index 1

    +placeholder()
      font-size 12px
      color #1E2B6F
      font-weight 500

    @media (max-width 767px)
      padding-left 10px

  &__input-icon
    position absolute
    right 12px
    top 50%
    transform translate(0, -50%)
