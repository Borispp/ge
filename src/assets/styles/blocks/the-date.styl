.the-date
  &__input-wrapper
    position relative
    background #fff
    height 48px
    border-radius 5px
    box-shadow 0 1px 3px 0 rgba(73,79,106,0.14)
    border 1px solid transparent

    &.-small
      height 36px

      .the-date__input
        line-height 36px

    @media (max-width 767px)
      height 43px

      &.-small
        height 36px

    &.-open
      border-color $blue

      .the-date__label
        color #536AFF

    &.icon-left
      .the-date__input-icon
        right auto
        left 20px

      .the-date__input
        padding-top 20px
        padding-left 50px
        font-size 15px

        +placeholder()
          font-size 15px

        &.-small
          padding-top 2px
          padding-left 0
          text-align center

      .the-date__label
        left 50px
        top 12px

  &__input
    width 100%
    height 100%
    line-height 48px
    border-radius 5px
    background transparent
    border none
    font-size 14px
    color #1E2B6F
    font-weight 500
    padding 18px 12px 0
    position relative
    z-index 1

    +placeholder()
      font-size 14px
      color rgba(#A6B2D9, .9)
      font-weight 400

    @media (max-width 767px)
      line-height 43px

  &__label
    position absolute
    left 12px
    top 7px
    font-size 12px
    line-height 18px
    color #1E2B6F
    font-weight 500

  &__input-icon
    position absolute
    right 12px
    top 50%
    transform translate(0, -50%)
