.the-header-first-screen
  position relative
  width 100%
  height 488px
  background #1548bf url('../images/content/header.svg')
  background-size cover
  background-position center

  @media (max-width 767px)
    height 300px

  @media (max-width 500px)
    height 190px


  &__content
    width 100%
    height 100%
    display flex
    align-items center

  &__content-label
    display inline-block
    padding 3px 15px 2px
    background #4A79FE
    box-shadow 0 2px 4px 0 rgba(48,55,91,0.20)
    border-radius 15px
    color #fff
    font-weight 500
    font-size 11px
    text-transform uppercase
    letter-spacing .5px

  &__content-description
    font-weight 900
    font-size 48px
    color $white
    letter-spacing 0
    line-height 56px
    padding 20px 0

    @media (max-width 767px)
      font-size 30px
      line-height 30px
      padding 10px 0

  &__content-scroll
    cursor pointer
    transition opacity $transition
    margin-top 40px

    &:hover
      opacity .7

    @media (max-width 767px)
      display none

  &__search
    position absolute
    width 100%
    transform translate(0, -50%)

    @media (max-width 992px)
      position relative
      transform translate(0, 0)
      background #f0f5fb

      .base_col
        padding 0

      .top-search__content
        border-radius 0

      .top-search__tabs-item
        border-radius 0
        width 50%
        justify-content center

        &:not(.-active)
          background rgba(83,106,255,1)

      .top-search__content
        padding 20px 10px
