.the-header-page-first-screen
  background-image: linear-gradient(-270deg, #1639BB 0%, #329DFF 35%, #1639BB 100%);
  box-shadow: 0 1px 3px 0 rgba(73,79,106,0.14);

  &__content
    width 100%
    height 250px
    position relative
    overflow hidden

    @media (max-width: 767px)
      height 140px

  &__bg
    position absolute
    right 0
    width 100%
    max-width 800px

    &.about
      height 240px

      @media (max-width: 767px)
        height 140px

      @media (max-width: 550px)
        transform scale(1.6)
        right -50px

    &.contacts
      height 250px

      @media (max-width: 767px)
        height 140px

      @media (max-width: 550px)
        transform scale(1.25)
        right 40px

  &__content-description
    font-weight 900
    font-size 48px
    color $white
    letter-spacing 0
    line-height 56px
    padding 20px 0

    @media (max-width: 767px)
      font-size 30px
      line-height 30px

  &__content-text
    position absolute
    top 50%
    transform translate(0, -50%)

  .base_col
    height 100%
