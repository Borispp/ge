.the-parcel
  position relative
  color #1E2B6F
  background #fff
  width 100%
  max-width 400px
  margin 36px 0 0
  padding 12px 0 0 0
  border-radius: 0 0 5px 5px
  overflow hidden

  &:before
    content '●●●●●●●●●●●●●●●●●●●●●●●●●●●'
    font-size 24px
    line-height 0
    letter-spacing 5px
    color #1639bb
    position absolute
    top 0
    left calc(50% + 2px)
    transform translate(-50%, 0)

  &__item-wrapper
    display flex
    flex-wrap wrap
    margin 0 16px 0
    padding 18px 0
    border-bottom 1px solid #e5e9f6

    &.-no-border
      border-bottom none

  &__logo
    width 100%
    height 37px
    display flex
    justify-content center
    align-items center
    background #F0F5FB
    border-radius 0 0 5px 5px
