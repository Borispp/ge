.the-passanger-count
  position: relative;
  background: #fff;
  width 100%
  height 60px
  border-radius: 5px;
  box-shadow: 0 1px 3px 0 rgba(73,79,106,0.14);
  border: 1px solid transparent;
  cursor pointer
  padding 0 12px
  box-sizing border-box

  &.active
    border-color $blue

    .the-passanger-count__label
      color $blue

  &__data-wrapper
    display flex
    align-items center
    height 60px

  &__icon
    margin 0 12px 0 0

  &__data
    line-height 12px

  &__label
    display block
    font-size: 12px;
    line-height: 18px;
    color: $blue-deep;
    font-weight: 500;
    margin -3px 0 3px 0
    cursor pointer

  &__count
    font-size 15px
    height 15px
    color $blue-deep
    width 100%
    border 0
    cursor pointer

  &__count-select
    visibility hidden
    opacity 0
    position absolute
    bottom 0
    left 0
    transform translate(0, calc(100% - 5px))
    width 100%
    min-width 285px
    max-width 375px
    padding 30px 20px
    box-sizing border-box
    border-radius 5px
    background: #FFFFFF;
    box-shadow: 0 6px 23px -1px rgba(7,31,115,0.15);
    cursor default
    transition all $transition

    &.show
      opacity 1
      visibility visible
      transform translate(0, 100% + 1px)

  &__count-select-item
    display flex
    justify-content space-between
    margin-bottom 24px

    &:last-child
      margin-bottom 0

  &__count-select-name
    flex 0 0 55%

  &__count-select-counter
    flex 0 0 45%

  &__count-select-title
    font-size 15px
    line-height 15px
    font-weight 500
    color $blue-deep
    padding-bottom 4px
    display flex
    align-items center

  &__count-select-title-label
    display flex
    height 18px
    background: #FD8E49;
    box-shadow: 0 2px 4px 0 rgba(48,55,91,0.20);
    border-radius 9px
    font-weight 500
    font-size: 9px;
    text-transform uppercase
    line-height 18px
    color: #FFFFFF;
    text-align: center;
    padding 0 5px
    margin-left 8px

  &__count-select-description
    opacity: 0.5;
    font-size: 12px;
    line-height 12px
    color $blue-deep

  &__count-select-counter
    display flex
    align-items center

  &__count-select-counter-value
    flex 1
    width 0
    border 0
    text-align center
    font-weight 600
    font-size: 19px;
    color: $blue-deep

  &__count-select-counter-button
    width 36px
    height 36px
    box-sizing border-box
    display flex
    align-items center
    justify-content center
    border 1px solid #A6B2D9
    border-radius 5px
    cursor pointer
    transition: all $transition

    &.disabled
      cursor not-allowed
      background #f0f5fb

      &:hover
        background #f0f5fb
        border-color #A6B2D9
        svg path
          fill: #A6B2D9

    svg path
      fill: #A6B2D9
      transition: all $transition

    &:hover
      background #536AFF
      border-color #536AFF

      svg path
        fill: #fff
