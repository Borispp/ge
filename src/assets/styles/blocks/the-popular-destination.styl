.the-popular-destination
  padding 52px 0 72px
  width 100%
  overflow-x hidden

  @media (max-width 767px)
    padding 50px 0

  h2.headline
    text-align center
    margin-bottom 44px

    span
      display block

    @media (max-width 767px)
      text-align center
      margin-bottom 20px

  &__wrapper
    display flex
    flex-wrap wrap
    margin -10px -10px 40px

    &.-mobile
      display none

    @media (max-width 767px)
      display none

      &.-mobile
        width 175%
        display block
        transform translate(5px, 0)

        &.slick-dotted.slick-slider
          margin-bottom 60px

  &__item
    flex-basis calc(33.33% - 20px)
    overflow hidden
    border-radius 5px
    transition all $transition
    margin 10px

    &:hover
      box-shadow 0 4px 12px 0 rgba(24,34,85,0.42)

    @media (max-width 1150px)
      flex-basis calc(50% - 20px)

    @media (max-width 767px)
      text-align center
      margin 0 5px

  &__rezervation
    background #536AFF
    box-sizing border-box
    padding 20px
    position relative
    z-index 2

    .button
      margin-left 10px
      flex 1

    @media (max-width 767px)
      padding 10px

  &__background-wrapper
    width 100%
    height 266px
    position relative
    overflow hidden

    &::after
      content ''
      display block
      position absolute
      bottom 0
      z-index 1
      width 100%
      height 55%
      opacity 0.7
      background-image linear-gradient(-180deg, rgba(68,74,81,0.00) 0%, #1E2B6F 99%)

  &__background
    position absolute
    top 0
    left 0
    width 100%
    height 100%
    background-size cover
    background-position center center
    transition transform $transition

  &__destination
    position relative
    z-index 2
    position absolute
    bottom 12px
    box-sizing border-box
    width 100%
    padding 0 20px
    display flex
    justify-content space-between
    align-items flex-end

    @media (max-width 767px)
      padding 0 10px

  &__destination-name
    font-size 20px
    font-weight 700
    color #fff

    @media (max-width 767px)
      font-size 14px

  &__destination-price
    font-size 32px
    line-height 32px
    font-weight 700
    color #fff

    sup
      font-size 16px
      position relative
      top -11px

    @media (max-width 767px)
      font-size 20px
      line-height 20px

      sup
        font-size 11px
        top -6px

  &__rezervation
    display flex

    .the-date__input-wrapper
      flex 0 0 60%

      @media (max-width 1200px)
        flex 0 0 50%

      @media (max-width 767px)
        flex 0 0 60%

  &__button-all
    display block
    width 100%
    max-width 310px
    margin 0 auto
    height 60px

    .button__icon
      margin-left 15px
      position relative
      top 2px
