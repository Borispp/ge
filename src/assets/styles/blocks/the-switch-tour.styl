.the-switch-tour
  display flex
  align-items stretch
  position relative
  padding 1px
  height 20px
  box-sizing border-box
  border-radius 20px
  background #fff
  color $blue-deep
  box-shadow: 0 2px 4px 0 rgba(48,55,91,0.20);

  &__button
    display flex
    align-items center
    justify-content center
    border-radius 20px
    flex 0 0 50%
    border 0
    font-size 11px
    line-height 10px
    height 18px
    font-weight 600
    cursor pointer
    text-transform uppercase
    padding 0
    margin 0
    background #fff

    &.active
      background $blue
      color #fff

  &__single
    display flex
    align-items center
    height 20px
    border-radius 20px
    padding 0 12px
    font-size 11px
    font-weight 600
    text-transform uppercase
    color #fff
    background $blue
